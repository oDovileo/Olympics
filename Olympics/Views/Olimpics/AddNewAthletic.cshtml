@model AthleteModel

<h2>Registration</h2>

@using (Html.BeginForm("AddNewItem", "Olimpics", FormMethod.Post))
{
    <div class="container-full" style="background-color:aliceblue">
        <div class="container">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name)
            Html.LabelFor(x => x.Surname)
            @Html.TextBoxFor(x => x.Surname)
            Html.LabelFor(x => x.Country)
            @Html.TextBoxFor(x => x.Country)
            <input type="submit" value="Submit" />
        </div>
    </div>
}
